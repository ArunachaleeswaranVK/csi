<div class="row">
<div class="nested-fields">
    

<div class="form-group sf col-md-3">
       
        <%= f.text_field :event_name ,  required: true, class: "form-control"%>
</div>
<div class="form-group sf col-md-3">
       
        <%= f.text_field :event_place,  required: true , class: "form-control"%>
</div>
<div class="form-group sf col-md-5">
        
       
        
        <%= f.select(:role_played, options_for_select([
          ['Paper Presenter', 'Paper Presenter'], 
          ['Competitor', 'Competitor'],
          ['Speaker','Speaker'],
          ['Other','Other']]), {}, {class: "form-control"}) %>
</div>


<div class="form-group sf col-md-1 remove-sub-form-button">
   <%= link_to_remove_association "Remove", f, class: "form-button btn btn-danger" %> 
</div>

</div>



</div>