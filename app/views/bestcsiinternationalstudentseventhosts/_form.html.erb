
<%= render 'shared/errors', object: @bestcsiinternationalstudentseventhost %>

<%= form_for @bestcsiinternationalstudentseventhost, :html => {:class => "form-horizontal"} do |f| %>
    
    
    <div class="primary-form">
    <div class="row institution-details">
      <!--institution details-->
    <p class="primary-form-subheading">Institution Details</p>  
    <div class="form-group col-md-6">
     <label>Name</label>
     <input type="text" class="form-control" id="name">   
    </div>
    <div class="form-group col-md-6">
      <label>Postal Address</label>
      <input type="text" class="form-control" id="address"> 
    </div>
    <div class="form-group col-md-2">
      <%= f.label :imno , "IMNO" %>
      <%= f.text_field :imno  , class: "form-control" , id:"imno"%>
    </div>
    
    
    <div class="form-group col-md-3">
      <label>District</label>
      <input type="text" class="form-control" id="district"> 
    </div>
    <div class="form-group col-md-2">
      <label>City</label>
      <input type="text" class="form-control" id="city"> 
    </div>
    <div class="form-group col-md-2">
      <label>Pin</label>
      <input type="text" class="form-control" id="pin"> 
    </div>
    <div class="form-group col-md-3">
      <label>State</label>
      <input type="text" class="form-control" id="state"> 
    </div>
    
    
    
    <!--sbc details-->
    <p class="primary-form-subheading">SBC Details</p>    
    <div class="sbc-details">
    <div class="form-group col-md-2">
      <label>Name</label>
      <input type="text" class="form-control" id="sbc-name"> 
    </div>
    
    <div class="form-group col-md-2">
      <label>Mem.No</label>
      <input type="text" class="form-control" id="sbc-imno"> 
    </div>
    <div class="form-group col-md-3">
      <label>Email</label>
      <input type="email" class="form-control" id="sbc-email"> 
    </div>
    <div class="form-group col-md-3">
      <label>Phonenumber</label>
      <input type="text" class="form-control" id="sbc-phone"> 
    </div>
   </div>
    
    <!--form specific feilds-->
    
    
      
    <div class="form-group col-md-1">
      <%= f.label :volunteers %>
      <%= f.text_field :volunteers , class: "form-control" %>
    </div>
    <div class="form-group col-md-1">
      <%= f.label :volunteers_added , "Added"  %>
      <%= f.text_field :volunteers_added , class: "form-control" %>
    </div>
    </div>
    </div>
    <!--sub form details-->
    
    
    <p class="primary-form-subheading">International Event/Competitions:</p>
    
    
    <br>
    <div class="row">
      <div class="col-md-4"><p class="subform-head"><strong>CSI organised Event / Competition name</strong></p></div>
      <div class="col-md-3"><p  class="subform-head"><strong>Date of event</strong></p></div>
      <div class="col-md-5"><p><strong>No. of students participated from abroad with Country name</strong></p></div>
      
      
    </div>
    
    <%= f.fields_for :internationalevents do |i| %>
    
      <%= render 'internationalevent_fields', f: i %>
   
    <% end %>
    
    
    <div class="links col-md-12">
      <br>
        <%= link_to_add_association 'Add Event', f, :internationalevents , class: "form-button btn btn-primary" %>
    </div>
    
    
    <div class="form-group">
        <div class="col-md-offset-5 col-md-2">
            <%= f.submit "Submit" , class: "btn btn-success btn-lg" %>
        </div>
    </div>
    
<% end %>   
