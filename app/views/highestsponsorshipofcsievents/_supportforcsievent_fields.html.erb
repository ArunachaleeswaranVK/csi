<div class="row">
<div class="nested-fields">
    

<div class="form-group col-md-4">
        <%= f.label :name_of_event %>
        <%= f.text_field :name_of_event , class: "form-control" %>
</div>
<div class="form-group col-md-4">
        <%= f.label :date_of_event %>
        <%= f.date_field :date_of_event , class: "form-control" %>
</div>
<div class="form-group col-md-4">
        <%= f.label :organised_by %>
        <%= f.text_field :organised_by, class: "form-control" %>
</div>
<div class="form-group col-md-8">
        <%= f.label :support_details %>
        <%= f.text_area :support_details , class: "form-control"%>
</div>
<div class="form-group col-md-3">
        <%= f.label :monetary_value %>
