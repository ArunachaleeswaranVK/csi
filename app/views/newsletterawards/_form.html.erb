
<%= render 'shared/errors', object: @newsletteraward %>

<%= form_for @newsletteraward, :html => {:class => "form-horizontal"} do |f| %>
    
     
   <div class="row">
    
    <div class="form-group col-md-2">
      <%= f.label :region  %>
      <%= f.text_field :region  , class: "form-control"%>
    </div>
    <div class="form-group col-md-2">
      <%= f.label :chapter  %>
      <%= f.text_field :chapter  , class: "form-control"%>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :address  %>
      <%= f.text_area :address  , class: "form-control"%>
    </div>
    <div class="form-group col-md-2">
      <%= f.label :phone  %>
      <%= f.text_field :phone  , class: "form-control"%>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :email  %>
      <%= f.email_field :email  , class: "form-control"%>
    </div>
    
    
   </div>
   
   
    <!--sub form details-->
    <div>
    <p class="primary-form-subheading">Details of Chapter News Letter Published</p>
    

    <br>
    <div class="row">
      <div class="col-md-4"><p class="subform-head"><strong>Date of Publication</strong></p></div>
      <div class="col-md-4"><p  class="subform-head"><strong>Title / Theme of the Newsletter</strong></p></div>
      <div class="col-md-4"><p  class="subform-head"><strong>Remarks</strong></p></div>
     
      
      
   
    <%= f.fields_for :detailsfornewsletterawards do |i| %>
    
      <%= render 'detailsfornewsletteraward_fields', f: i %>
   
    <% end %>
    
    
    <div class="links col-md-12">
      <br>
        <%= link_to_add_association 'Add Event', f, :detailsfornewsletterawards , class: "form-button btn btn-primary" %>
    </div>
    </div>
    
    <!--end of sub forms-->
    <div class="row">
    
    <div class="form-group col-md-12">
      <%= f.label :other_info  %>
      <%= f.text_area :other_info  , class: "form-control"%>
    </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-5 col-md-2">
            <%= f.submit "Submit" , class: "btn btn-success btn-lg" %>
        </div>
    </div>
    
<% end %>   
