<div>
       <h1 class="show-head">Longest Continuous SBC Award</h1>
       <p class="show-submitted-by">Submitted by: <%= @longestcontinuoussbc.user.email %></p>
    </div>  
    


  <div class="primary-form">
    <div class="row institution-details">
      <!--institution details-->
    <p class="primary-form-subheading">Institution Details</p>  
    <div class="form-group col-md-6">
     <label>Institution Name</label>
     <input type="text" class="form-control" id="name" value="<%= @longestcontinuoussbc.institute.name %>" >     
    </div>
   
   <div class="form-group col-md-3">
      <label>IMNO</label>
     <input type="text" class="form-control" id="name" value="<%= @longestcontinuoussbc.institute.imno %>" >  
    </div>
    
    <div class="form-group col-md-3">
      <label>Institution Name</label>
     <input type="text" class="form-control" id="name" value="<%= @longestcontinuoussbc.institute.city %>" >  
    </div>
    
   
    
    
    
    <!--sbc details-->
    <p class="primary-form-subheading">SBC Details</p>    
    <div class="sbc-details">
        <div class="form-group col-md-3">
      <label>Name</label>
      <input type="text" class="form-control" id="sbc-name" value="<%= @longestcontinuoussbc.institute.sbcs.first.sbc_name %>" >
    </div>
    
    
    <div class="form-group col-md-3">
      <label>Email</label>
      <input type="email" class="form-control" id="sbc-email" value="<%=  @longestcontinuoussbc.institute.sbcs.first.sbc_email %>" > 
    </div>
    
   </div>
    
    <!--form specific feilds-->
    
    
      
    <div class="form-group col-md-3">
      <label>Volunteers</label>
      <input type="text" class="form-control" id="volunteers" title="Number of CSI Volunteers as on 30th  June  2017" 
      value="<%=  @longestcontinuoussbc.institute.sbcs.first.no_of_volunteers %>" > 
    </div>
    <div class="form-group col-md-3">
         <label>Volunteers added</label>
      <input type="text" class="form-control" id="volunteers" title="Number of CSI Volunteers Added" 
      value="<%=  @longestcontinuoussbc.volunteers_added %>" > 
    </div>
    </div>
    </div>
    
    
    <p class="primary-form-subheading">SBC tenure details (No. of CSI Volunteers Added):</p>
    
    <br>
    <div class="row container">
      <table class="col-md-12">
        
        <tbody>
          <tr>
            <td> <strong>During 2014-15 : </strong> <%= @longestcontinuoussbc.last_but_before_year_vol_strength %> Volunteers </td>
            <td> <strong>During 2015-16 :</strong> <%= @longestcontinuoussbc.last_year_vol_strength  %> Volunteers </td>
            <td> <strong>During 2016-17 :</strong> <%= @longestcontinuoussbc.current_year_vol_strength  %> Volunteers </td>
          </tr>
        </tbody>
      </table>
    </div>
    
<br></br>
    
    
  
